### ==========================================
### Complete OAuth 2.0 Flow Test Scenarios
### ==========================================

### Scenario 1: Client Credentials Full Flow
# Step 1: Get Access Token
POST {{RestFlow.DemoServer_HostAddress}}/token
Content-Type: application/x-www-form-urlencoded

grant_type=client_credentials&client_id=restflow-client&client_secret=restflow-secret&scope=read write

# Step 2: Use the token from above to access protected resource
# Copy the access_token value and replace <TOKEN> below
###

GET {{RestFlow.DemoServer_HostAddress}}/api/oauth/protected
Authorization: Bearer <TOKEN>
Accept: application/json

###

### Scenario 2: Password Grant Full Flow with Refresh
# Step 1: Get Access Token with Password
POST {{RestFlow.DemoServer_HostAddress}}/token
Content-Type: application/x-www-form-urlencoded

grant_type=password&username=user&password=pass&client_id=restflow-client&client_secret=restflow-secret

# Step 2: Access Protected Resource with Token
# Copy the access_token value from above
###

GET {{RestFlow.DemoServer_HostAddress}}/api/oauth/protected
Authorization: Bearer <TOKEN>
Accept: application/json

# Step 3: Refresh the Token
# Use the refresh_token from Step 1
###

POST {{RestFlow.DemoServer_HostAddress}}/token
Content-Type: application/x-www-form-urlencoded

grant_type=refresh_token&refresh_token=static-refresh-token-for-password-grant

# Step 4: Access Protected Resource with New Token
# Copy the new access_token value
###

GET {{RestFlow.DemoServer_HostAddress}}/api/oauth/protected
Authorization: Bearer <NEW_TOKEN>
Accept: application/json

###

### Scenario 3: Authorization Code Grant Full Flow with Refresh
# Step 1: Exchange Auth Code for Token
POST {{RestFlow.DemoServer_HostAddress}}/token
Content-Type: application/x-www-form-urlencoded

grant_type=authorization_code&code=static-auth-code-for-testing&client_id=restflow-client&client_secret=restflow-secret&redirect_uri=http://localhost

# Step 2: Access Protected Resource
# Copy the access_token value from above
###

GET {{RestFlow.DemoServer_HostAddress}}/api/oauth/protected
Authorization: Bearer <TOKEN>
Accept: application/json

# Step 3: Refresh the Token
###

POST {{RestFlow.DemoServer_HostAddress}}/token
Content-Type: application/x-www-form-urlencoded

grant_type=refresh_token&refresh_token=static-refresh-token-for-auth-code-grant

# Step 4: Access Protected Resource with Refreshed Token
###

GET {{RestFlow.DemoServer_HostAddress}}/api/oauth/protected
Authorization: Bearer <NEW_TOKEN>
Accept: application/json

